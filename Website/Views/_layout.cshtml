@using MaintMan;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>MaintMan - A Maintenance Mode Manager for AppHarbor Apps</h1>
            </div>
            <nav>
                <ul id="menu">
                    <li><a href="@Url.RouteUrl(RouteName.TurnMaintenanceModeOn)">Turn On</a></li>
                    <li><a href="@Url.RouteUrl(RouteName.TurnMaintenanceModeOff)">Turn Off</a></li>
                    <li><a href="@Url.RouteUrl(RouteName.FindCreateBuildUrl)">Find Create Build URL</a></li>
                    <li><a href="https://github.com/anglicangeek/MaintMan">Soure Code on GitHub</a></li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @if (TempData["success"] != null) {
                <section id="flash"><p>@TempData["success"]</p></section>
            }
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>